# =====================================================================
# SCALABILITY CONFIGURATION - Production-ready settings
# =====================================================================

# Database Connection Pooling (Prisma)
# For high-traffic scenarios (1000+ req/s):
# - connection_limit: 20-30 per instance
# - pool_timeout: 10 seconds
DATABASE_URL="postgresql://user:password@localhost:5432/db?schema=public&connection_limit=25&pool_timeout=10"

# Redis Configuration
# For distributed caching and session management
REDIS_URL="redis://localhost:6379"
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# BullMQ Queue Configuration
# High-throughput settings:
QUEUE_CONCURRENCY=10
QUEUE_MAX_STALLED_COUNT=3
QUEUE_STALLED_INTERVAL=30000
QUEUE_LOCK_DURATION=30000

# Rate Limiting (per IP/User)
RATE_LIMIT_GUEST=20
RATE_LIMIT_AUTH=100
RATE_LIMIT_WINDOW=60

# Cache TTL (seconds)
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
